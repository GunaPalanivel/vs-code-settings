{
  // Allow opening untrusted files in the workspace
  "security.workspace.trust.untrustedFiles": "open",

  // Set default editor for .7z files
  "workbench.editorAssociations": {
    "*.7z": "default"
  },

  // Enable automatic fetching of Git changes
  "git.autofetch": true,

  // Disable information message from Live Server extension
  "liveServer.settings.donotShowInfoMsg": true,

  // Set the icon theme for the workbench
  "workbench.iconTheme": "material-icon-theme",

  // Set cursor style to a line and its width
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 3,

  // Apply specific settings to all profiles in the settings file
  "workbench.settings.applyToAllProfiles": [
    "editor.fontFamily",
    "editor.fontSize",
    "editor.cursorStyle",
    "editor.cursorBlinking",
    "editor.cursorSmoothCaretAnimation",
    "editor.formatOnSave",
    "files.autoSave",
    "editor.defaultFormatter"
  ],

  // Set the font size for the editor
  "editor.fontSize": 16,

  // Set cursor blinking style
  "editor.cursorBlinking": "expand",

  // Enable automatic formatting on save
  "editor.formatOnSave": true,

  // Use the default HTML formatter for HTML files
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  // Use Prettier as the default formatter for all files
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Set the color theme for the workbench
  "workbench.colorTheme": "GitHub Dark Colorblind (Beta)",

  // Set the initial zoom level for the window
  "window.zoomLevel": -1,

  // Enable auto-save after a delay
  "files.autoSave": "afterDelay",

  // Enable formatting on paste
  "editor.formatOnPaste": true,

  // Use Prettier as the default formatter for CSS files
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Use Prettier as the default formatter for JavaScript files
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Enable GitHub Copilot for various file types
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  }
}
